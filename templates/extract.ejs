<html>
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div style="width: 768px; display: flex; flex-direction: column; height: 100vh">
      <div>
        <span></span>
      </div>
      <div className="flex w-full justify-between p-10">
        <div>
          <span className="text-zinc-400 text-2xl font-bold"> {data?.user?.name} </span>
          <p className="text-blue-500 text-5xl font-bold">R$ {toLocaleAmount(data.amount)}</p>
        </div>
        <span className="font-bold text-lg">{dateToLine(data.created_at)}</span>
      </div>
      <div className="flex flex-col px-10 py-4 gap-1">
        <span className="text-zinc-500 font-semibold mb-2 text-3xl"> Pagador </span>
      </div>
      <span className="text-black font-semibold text-${size}">
        {nome}

        <span className="ml-2 text-zinc-500 font-semibold">{value}</span>
      </span>
      <span className="text-black font-semibold text-${size}">
        {DOC}

        <span className="ml-2 text-zinc-500 font-semibold">{value}</span>
      </span>
      <span className="text-black font-semibold text-${size}">
        {instituicao}

        <span className="ml-2 text-zinc-500 font-semibold">{value}</span>
      </span>
      <span className="text-black font-semibold text-${size}">
        {ag}

        <span className="ml-2 text-zinc-500 font-semibold">{value}</span>
      </span>
      <span className="text-black font-semibold text-${size}">
        {conta}

        <span className="ml-2 text-zinc-500 font-semibold">{value}</span>
      </span>
      <!-- favorecido -->
      <div className="flex flex-col px-10 py-4 gap-1">
        <span className="text-zinc-500 font-semibold mb-2 text-3xl"> Favorecido </span>
        <span className="text-black font-semibold text-${size}">
          {nome}

          <span className="ml-2 text-zinc-500 font-semibold">{value}</span>
        </span>
        <span className="text-black font-semibold text-${size}">
          {doc}

          <span className="ml-2 text-zinc-500 font-semibold">{value}</span>
        </span>
        <span className="text-black font-semibold text-${size}">
          {instituicao}

          <span className="ml-2 text-zinc-500 font-semibold">{value}</span>
        </span>
        <!-- ou number identifier ou ag conta -->
        <span className="text-black font-semibold text-${size}">
          {number identifier}

          <span className="ml-2 text-zinc-500 font-semibold">{value}</span>
        </span>

        <span className="text-black font-semibold text-${size}">
          {ag}

          <span className="ml-2 text-zinc-500 font-semibold">{value}</span>
        </span>
        <span className="text-black font-semibold text-${size}">
          {conta}

          <span className="ml-2 text-zinc-500 font-semibold">{value}</span>
        </span>
      </div>
    </div>
  </body>
</html>
